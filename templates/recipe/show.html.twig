{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Dish type</th>
                <td>{{ recipe.dishType }}</td>
            </tr>
            <tr>
                <th>Diet_type</th>
                <td>{{ recipe.dietType }}</td>
            </tr>
            <tr>
                <th>Serving</th>
                <td>{{ recipe.serving }}</td>
            </tr>
            <tr>
                <th>Prep_time</th>
                <td>{{ recipe.prepTime }}</td>
            </tr>
            <tr>
                <th>Cook_time</th>
                <td>{{ recipe.cookTime }}</td>
            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ recipe.instructions }}</td>
            </tr>
            <tr>
                <th>Image_url</th>
                <td>{{ recipe.imageUrl }}</td>
            </tr>
            <tr>
                <th>Season</th>
                <td>{{ recipe.season }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recipe_index') }}">back to list</a>

    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
