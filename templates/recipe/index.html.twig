{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Recipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Dish type</th>
                <th>Diet type</th>
                <th>Serving</th>
                <th>Prep time</th>
                <th>Cook time</th>
                <th>Instructions</th>
                <th>Image url</th>
                <th>Season</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.dishType }}</td>
                <td>{{ recipe.dietType }}</td>
                <td>{{ recipe.serving }}</td>
                <td>{{ recipe.prepTime }}</td>
                <td>{{ recipe.cookTime }}</td>
                <td>{{ recipe.instructions }}</td>
                <td>{{ recipe.imageUrl }}</td>
                <td>{{ recipe.season }}</td>
                <td>
                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_new') }}">Create new</a>
{% endblock %}
