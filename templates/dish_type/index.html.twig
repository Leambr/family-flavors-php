{% extends 'base.html.twig' %}

{% block title %}DishType index{% endblock %}

{% block body %}
    <h1>DishType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dish_type in dish_types %}
            <tr>
                <td>{{ dish_type.id }}</td>
                <td>{{ dish_type.name }}</td>
                <td>
                    <a href="{{ path('app_dish_type_show', {'id': dish_type.id}) }}">show</a>
                    <a href="{{ path('app_dish_type_edit', {'id': dish_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dish_type_new') }}">Create new</a>
{% endblock %}
